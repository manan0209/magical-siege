{
  "manifest_version": 3,
  "name": "Magical Siege",
  "version": "1.2.0",
  "description": "Make your siege magical, powerful, and beautiful",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://siege.hackclub.com/*",
    "https://waka.hackclub.com/*",
    "https://*.beeceptor.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://siege.hackclub.com/*"],
      "js": ["content.js"],
      "css": [
        "styles/content.css",
        "styles/theme-default.css",
        "styles/theme-magical.css",
        "styles/theme-dark.css",
        "styles/animations.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    },
    "default_title": "Magical Siege Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "styles/*"],
      "matches": ["https://siege.hackclub.com/*"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "Magical Siege",
  "version": "1.0.0",
  "description": "Make your siege magical, powerful, and beautiful",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://siege.hackclub.com/*",
    "https://waka.hackclub.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://siege.hackclub.com/*"],
      "js": ["content/main.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "Magical Siege Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "styles/*"],
      "matches": ["https://siege.hackclub.com/*"]
    }
  ]
}
